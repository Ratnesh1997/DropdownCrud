@model IEnumerable<CrudR.Models.Customer>
<a  asp-action="Create" asp-controller="Customer" class="btn btn-outline-primary">ADD NEW CUSTOMER</a><br />
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>State</th>
                <th>Mobile No</th>
                <th>Email_ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var items in Model)
            {
            <tr>
                <td>@items.Name</td>
                <td>@items.Gender</td>
                @*<th>@items.state</th>*@
                <td>@items.Mobile_No</td>
                <td>@items.Email_Id</td>
                <td>
                    <a class="btn btn-outline-info" asp-action="UpdateDetails" asp-route-Id="@items.Id" value="Edit">Edit</a>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-outline-danger" asp-action="DeleteDetails" asp-route-Id="@items.Id" onclick="return confirm('Do You Want to Delete this Record')">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>